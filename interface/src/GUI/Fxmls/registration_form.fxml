       <TextField fx:id="emailField" prefHeight="21.0" prefWidth="187.0" style="-fx-background-radius: 25px;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
   
   
   
       <!-- Add Password Label -->
       <Label contentDisplay="CENTER" text="Phone number :" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="4">
    </Label>
      <TextField style="-fx-background-radius: 25px;" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <Label contentDisplay="CENTER" text="Melli Code :" textAlignment="CENTER" GridPane.rowIndex="5" />
      <TextField prefHeight="23.0" prefWidth="187.0" style="-fx-background-radius: 25px;" GridPane.columnIndex="1" GridPane.rowIndex="5" />
      <Label contentDisplay="CENTER" text="Age :" textAlignment="CENTER" GridPane.rowIndex="6" />
      <TextField style="-fx-background-radius: 25px;" GridPane.columnIndex="1" GridPane.rowIndex="6" />
   
   
