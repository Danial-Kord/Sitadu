       <Label text="Registration" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.rowSpan="1">
           <font>
               <Font name="Arial" size="24" />
           </font>
           <GridPane.margin>
               <Insets bottom="20" left="0" right="0" top="20" />
           </GridPane.margin>
       </Label>
   
   
   
       <!-- Add Name Label -->
       <Label contentDisplay="CENTER" text="First Name : " textAlignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="1">
    </Label>
       <!-- Add Name Text Field -->
       <TextField fx:id="nameField" prefHeight="28.0" prefWidth="187.0" style="-fx-background-radius: 25px;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
